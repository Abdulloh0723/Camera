  <h2 style="color: #858796; text-align:center;">Mahsulotni tahrirlash</h2>
    <div class="row">
        <div class="col-md-12">
               <form action="/mahsulot/edit" method="POST" enctype="multipart/form-data" >
      <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Nomi</label>
        <input
            value="{{mahsulot.nomi}}"
          type="text"
          class="form-control"
          id="exampleFormControlInput1"
          placeholder="Login"
          name="login"
          required
          {{!-- readonly --}}

        />
      </div>
      <div class="mb-3">
        <label for="exampleFormControlInput2" class="form-label">Narxi</label>
        <input
            value="{{mahsulot.narxi}}"
          type="number"
          class="form-control"
          id="exampleFormControlInput2"
          placeholder="Parol"
          name="parol"
        />
        <label for="exampleFormControlInput8" class="form-label">Soni</label>
        <input
            value="{{mahsulot.soni}}"
          type="number"
          class="form-control"
          id="exampleFormControlInput8"
          placeholder="Soni"
          name="soni"
        />
        <label for="exampleFormControlInput1" class="form-label">Turi</label>
        <input
            value="{{mahsulot.turi}}"
          type="text"
          class="form-control"
          id="exampleFormControlInput1"
          {{!-- placeholder="Login" --}}
          name="login"
          {{!-- required --}}
          {{!-- readonly --}}
        />
      </div>
       <div class="mb-3">
   <label for="exampleInputImage" class="form-label">Rasmi</label>
    <input value="{{mahsulot.img}}" name="img"  type="file" class="form-control" id="fileInput" aria-describedby="emailHelp" accept="image/*" onchange="validateImageFile(this)">
    
  </div>
      <input type="hidden" name="id" value="{{mahsulot.id}}">
       <input type="hidden" value="{{mahsulot.djndxnnj}}" name="EskiImg">
      <button class="btn btn-primary">Saqlash</button>
      </form>
      <form action="/mahsulot/delete" method="POST">
        <input type="hidden" name="id" value="{{mahsulot.id}}">
        <button class="btn btn-danger my-4">O'chirish</button>
      </form>
        </div>
    </div>
</div>